<!doctype html>
<html lang="{{language}}">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kantor Maks Wrocław - Panel administratora</title>
    <link rel="stylesheet" href="/public/admin.css" />
  </head>
  <body {{#if success}}class="success"{{/if}}{{#if error}}class="error"{{/if}}>
    {{> toast}}
    {{> header}}
    <main>
      <form method="post">
        <section>
          <h2>Kursy detaliczne</h2>
          <table>
            <thead>
              <tr>
                <th>Kraj</th>
                <th>Waluta</th>
                <th>Kupno</th>
                <th>Sprzedaż</th>
              </tr>
            </thead>
            <tbody>
              {{#each wholesale}}
              <tr>
                <td>
                  <input
                    type="hidden"
                    name="wholesale[{{@index}}][id]"
                    value="{{id}}"
                  />
                  <input
                    type="hidden"
                    name="wholesale[{{@index}}][typeId]"
                    value="{{typeId}}"
                  />
                  <input
                    type="hidden"
                    name="wholesale[{{@index}}][timestamp]"
                    value="{{timestamp}}"
                  />
                  <input
                    type="text"
                    name="wholesale[{{@index}}][country]"
                    required
                    value="{{country}}"
                  />
                </td>
                <td>
                  <input
                    type="text"
                    name="wholesale[{{@index}}][currency]"
                    required
                    value="{{currency}}"
                  />
                </td>
                <td>
                  <input
                    type="number"
                    name="wholesale[{{@index}}][purchase]"
                    required
                    step="0.0001"
                    min="0"
                    value="{{purchase}}"
                  />
                </td>
                <td>
                  <input
                    type="number"
                    name="wholesale[{{@index}}][sale]"
                    required
                    step="0.0001"
                    min="0"
                    value="{{sale}}"
                  />
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </section>
        <section>
          <h2>Kursy hurtowe</h2>
          <table>
            <thead>
              <tr>
                <th>Kraj</th>
                <th>Waluta</th>
                <th>Kupno</th>
                <th>Sprzedaż</th>
              </tr>
            </thead>
            <tbody>
              {{#each retail}}
              <tr>
                <td>
                  <input
                    type="hidden"
                    name="retail[{{@index}}][id]"
                    value="{{id}}"
                  />
                  <input
                    type="hidden"
                    name="retail[{{@index}}][typeId]"
                    value="{{typeId}}"
                  />
                  <input
                    type="hidden"
                    name="retail[{{@index}}][timestamp]"
                    value="{{timestamp}}"
                  />
                  <input
                    type="text"
                    name="retail[{{@index}}][country]"
                    required
                    value="{{country}}"
                  />
                </td>
                <td>
                  <input
                    type="text"
                    name="retail[{{@index}}][currency]"
                    required
                    value="{{currency}}"
                  />
                </td>
                <td>
                  <input
                    type="number"
                    name="retail[{{@index}}][purchase]"
                    required
                    step="0.0001"
                    min="0"
                    value="{{purchase}}"
                  />
                </td>
                <td>
                  <input
                    type="number"
                    name="retail[{{@index}}][sale]"
                    required
                    step="0.0001"
                    min="0"
                    value="{{sale}}"
                  />
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </section>
        <input type="submit" value="Zapisz" />
      </form>
    </main>
    {{> footer}}
  </body>
</html>
