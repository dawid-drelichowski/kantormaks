{
  "name": "kantormaks-website",
  "version": "0.0.9",
  "description": "Kantormaks website based on Fastify",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js & npm run assets:dev",
    "assets:build": "lightningcss --minify --sourcemap assets/css/*.css --output-dir public/css",
    "assets:dev": "chokidar 'assets/css/*.css' -c 'lightningcss {path} --output-dir public/css'",
    "lint": "eslint .",
    "test": "playwright install chromium && playwright test"
  },
  "author": "Dawid Drelichowski",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fastify/basic-auth": "^6.0.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/view": "^11.0.0",
    "dotenv": "^17.0.1",
    "fastify": "^5.0.0",
    "handlebars": "^4.7.8",
    "qs": "^6.13.0"
  },
  "imports": {
    "#config": "./config.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/node": "^24.0.3",
    "lightningcss-cli": "^1.27.0"
  }
}
